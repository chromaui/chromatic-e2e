{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": false,
    "isolatedModules": true,
    "strictBindCallApply": true,
    "jsx": "react",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "target": "ES2020",
    "types": ["jest", "node", "cypress"],
    "moduleResolution": "node",
  },
  "include": ["src", "__playwright-tests__", "scripts", ".eslintrc.js", "jest.config.js", "packages"]
}
